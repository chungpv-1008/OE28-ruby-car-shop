<section class="navbar custom-navbar navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
      </button>
      <%= link_to t("car_shop"), root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-nav-first">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t(".car_list"), car_list_path %></li>
        <li><%= link_to t("news"), "#" %></li>
        <li><%= link_to t("about_us"), about_us_path %></li>
        <li><%= link_to t("contact_us"), contact_us_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to current_user.name, user_path(current_user.id),
            class: "dropdown-toggle", "data-toggle": "dropdown" %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li class="divider"></li>
              <li><%= link_to t("favorite_list"), favorite_lists_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
        <li><%= link_to t(".en"), locale: :en %></li>
        <li><%= link_to t(".vi"), locale: :vi %></li>
      </ul>
    </div>
  </div>
</section>
