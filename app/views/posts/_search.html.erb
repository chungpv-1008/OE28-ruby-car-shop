  <div class="form-group">
    <label><%= t "posts.new.condition" %>:</label>
    <%= select_tag :condition_id,
      options_for_select(load_dropdown(Condition),
        selected: params[:condition_id]),
          {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.fuel" %>:</label>
    <%= select_tag :fuel_id,
      options_for_select(load_dropdown(Fuel), selected: params[:fuel_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.origin" %>:</label>
    <%= select_tag :origin_id,
      options_for_select(load_dropdown(Origin), selected: params[:origin_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <%= submit_tag t("search"), class: "section-btn btn btn-primary btn-block" %>
<% end %>
