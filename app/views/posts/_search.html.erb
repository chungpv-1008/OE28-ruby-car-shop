          {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.gear_box" %>:</label>
    <%= select_tag :gearbox_id,
      options_for_select(load_dropdown(Gearbox), selected: params[:gearbox_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.car_type" %>:</label>
    <%= select_tag :car_type_id,
      options_for_select(load_dropdown(CarType), selected: params[:car_type_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.brand" %>:</label>
    <%= select_tag :brand_id,
      options_for_select(load_dropdown(Brand), selected: params[:brand_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.car_model" %>:</label>
    <%= select_tag :car_model_id,
      options_for_select(load_dropdown(CarModel),
        selected: params[:car_model_id]),
          {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.color" %>:</label>
    <%= select_tag :color_id,
      options_for_select(load_dropdown(Color), selected: params[:color_id]),
        {include_blank: true, class: "form-control"}
    %>
  </div>
  <div class="form-group">
    <label><%= t "posts.new.number_of_seat" %>:</label>
    <%= select_tag :number_of_seat_id,
      options_for_select(load_dropdown(NumberOfSeat),
