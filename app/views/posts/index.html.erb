<section>
  <div class="container">
    <div class="text-center">
      <h1><%= t "car_list" %></h1>
    </div>
  </div>
</section>
<section class="section-background">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-xs-12">
        <%= render "search" %>
      </div>
      <div class="col-lg-9 col-xs-12">
        <div class="row">
          <div class="col-md-offset-9 col-md-3">
            <label><%= t "sort" %>:</label>
            <%= select_tag :sort, options_for_select(Settings.sort_option),
                {include_blank: true, class: "form-control", id: "sort"} %>
          </div>
        </div>
        <br>
        <div id="post-index">
          <div class="row">
            <%= render @posts %>
          </div>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</section>
